{
  "name": "Ubuntu + Bun + Node",
  "image": "ghcr.io/iamvikshan/devcontainers/ubuntu-bun-node:latest",

  // Configure tool-specific properties.
  "customizations": {
    "vscode": {
      "extensions": ["dbaeumer.vscode-eslint", "GitHub.copilot", "esbenp.prettier-vscode", "eamodio.gitlens", "oven.bun-vscode"]
    }
  },

  // Use 'postCreateCommand' to run commands after the container is created.
  "postCreateCommand": "./scripts/setup-canvas.sh && bun install",

  // Set `remoteUser` to `root` to connect as root.
  "remoteUser": "root",

  // Mount docker socket and enable privileged mode for Docker-in-Docker
  "privileged": true,
  "mounts": ["source=dind-var-lib-docker,target=/var/lib/docker,type=volume"]
}
